<header>
	<h1>Eat Dat Burger!</h1>
	<img src="assets/img/burger.png" alt="burger image" class="burger-img">
</header>
<section>
	<div class="devour-section">
		<div class="eat">
			<ul>
				{{#each burgers}}
				{{#unless this.devoured}}
					<li>
						{{this.burger_name}}
							<form action="/index/update/{{this.id}}?_method=PUT" method="POST">
								<input type="hidden" name="devoured" value="true">
								<button type="submit">Devour!</button>
							</form>
					</li>
				{{/unless}}
				{{/each}}
			</ul>
		</div>
		<div class="eaten">
			<ul>
				{{#each burgers}}
					{{#if this.devoured}}
						<li>
							{{this.burger_name}}
						</li>
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>
	<div class="add-section">
		<form action="/index/insert" method="POST">
			<div class="form-group">
				<textarea type="text" name="burger_name"></textarea>
			</div>
			<br>
			<button type="submit">Add Burger</button>
		</form>
	</div>
</section>